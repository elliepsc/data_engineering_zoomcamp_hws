# ============================================
# GCP Configuration
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=europe-west1
GCS_BUCKET_NAME=your-bucket-name

# Path to your GCP service account key
# Download from: GCP Console > IAM > Service Accounts
GCP_CREDENTIALS_PATH=./config/gcp-credentials.json

# ============================================
# BigQuery Configuration
# ============================================
BQ_DATASET_RAW=raw_data
BQ_DATASET_STAGING=staging
BQ_DATASET_ANALYTICS=analytics

# ============================================
# Airflow Configuration
# ============================================
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Airflow Web UI credentials
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@airflow-data-platform.com

# ============================================
# Data Source Configuration
# ============================================
# NYC Taxi data date range for backfill
DATA_START_DATE=2019-01-01
DATA_END_DATE=2020-12-31

# Taxi type (yellow or green)
TAXI_TYPE=green

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Alert Configuration (optional)
# ============================================
SLACK_WEBHOOK_URL=
EMAIL_ALERTS_ENABLED=false
ALERT_EMAIL=
